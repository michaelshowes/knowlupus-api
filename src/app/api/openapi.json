{
	"openapi": "3.1.1",
	"info": {
		"title": "KnowLupus API",
		"version": "1.0.0",
		"description": "API for KnowLupus quiz application"
	},
	"components": {
		"schemas": {
			"Link": {
				"type": "object",
				"properties": {
					"uri": { "type": "string" },
					"title": { "type": "string" },
					"options": { "type": "array", "items": { "type": "object" } },
					"url": { "type": "string" }
				}
			},
			"Image": {
				"type": "object",
				"properties": {
					"url": { "type": "string" },
					"alt": { "type": "string" }
				}
			},
			"Sponsor": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"image_media": { "$ref": "#/components/schemas/Image" },
					"field_link": { "$ref": "#/components/schemas/Link" }
				}
			},
			"Answer": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"answer": { "type": "string" },
					"is_correct": { "type": "boolean" }
				}
			},
			"Question": {
				"oneOf": [
					{
						"type": "object",
						"properties": {
							"id": { "type": "string" },
							"category": {
								"type": "object",
								"properties": {
									"name": { "type": "string" },
									"slug": { "type": "string" }
								}
							},
							"question": { "type": "string" },
							"type": { "const": "multiple_choice" },
							"answers": {
								"type": "array",
								"items": { "$ref": "#/components/schemas/Answer" }
							}
						}
					},
					{
						"type": "object",
						"properties": {
							"id": { "type": "string" },
							"category": {
								"type": "object",
								"properties": {
									"name": { "type": "string" },
									"slug": { "type": "string" }
								}
							},
							"question": { "type": "string" },
							"type": { "const": "true_false" },
							"is_true": { "type": "boolean" }
						}
					},
					{
						"type": "object",
						"properties": {
							"id": { "type": "string" },
							"category": {
								"type": "object",
								"properties": {
									"name": { "type": "string" },
									"slug": { "type": "string" }
								}
							},
							"question": { "type": "string" },
							"type": { "const": "range" },
							"maximum": { "type": "number" },
							"minimum": { "type": "number" },
							"step_amount": { "type": "number" },
							"answer_value": { "type": "number" },
							"fuzzy": { "type": "boolean" },
							"suffix": { "type": "string" }
						}
					}
				]
			},
			"CTA": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"title": { "type": "string" },
					"text": { "type": "string" },
					"link": { "$ref": "#/components/schemas/Link" }
				}
			},
			"Level": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"lupus_quizzes_id": { "type": "string" },
					"name": { "type": "string" },
					"intro_title": { "type": "string" },
					"intro_text": { "type": "string" },
					"questions": {
						"type": "array",
						"items": { "$ref": "#/components/schemas/Question" }
					},
					"ctas": {
						"type": "array",
						"items": { "$ref": "#/components/schemas/CTA" }
					}
				}
			},
			"Quiz": {
				"type": "object",
				"properties": {
					"id": { "type": "string" },
					"name": { "type": "string" },
					"lupus_quizzes_id": { "type": "string" },
					"donate_button": { "$ref": "#/components/schemas/Link" },
					"nav_links": { "$ref": "#/components/schemas/Link" },
					"sponsors": {
						"type": "array",
						"items": { "$ref": "#/components/schemas/Sponsor" }
					},
					"form_code": { "type": "string" },
					"levels": {
						"type": "array",
						"items": { "$ref": "#/components/schemas/Level" }
					}
				}
			}
		}
	},
	"paths": {
		"/api/quizzes": {
			"get": {
				"summary": "Get all quizzes",
				"description": "Retrieve a list of all available quizzes",
				"responses": {
					"200": {
						"description": "List of quizzes",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": { "$ref": "#/components/schemas/Quiz" }
								}
							}
						}
					}
				}
			}
		},
		"/api/quizzes/{quizId}": {
			"get": {
				"summary": "Get a specific quiz",
				"description": "Retrieve details of a specific quiz by ID",
				"parameters": [
					{
						"name": "quizId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "The ID of the quiz"
					}
				],
				"responses": {
					"200": {
						"description": "Quiz details",
						"content": {
							"application/json": {
								"schema": { "$ref": "#/components/schemas/Quiz" }
							}
						}
					}
				}
			}
		},
		"/api/quizzes/{quizId}/levels": {
			"get": {
				"summary": "Get levels for a quiz",
				"description": "Retrieve all levels for a specific quiz",
				"parameters": [
					{
						"name": "quizId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "The ID of the quiz"
					}
				],
				"responses": {
					"200": {
						"description": "List of levels",
						"content": {
							"application/json": {
								"schema": {
									"type": "array",
									"items": { "$ref": "#/components/schemas/Level" }
								}
							}
						}
					}
				}
			}
		},
		"/api/quizzes/{quizId}/levels/{levelId}": {
			"get": {
				"summary": "Get a specific level",
				"description": "Retrieve details of a specific level within a quiz",
				"parameters": [
					{
						"name": "quizId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "The ID of the quiz"
					},
					{
						"name": "levelId",
						"in": "path",
						"required": true,
						"schema": {
							"type": "string"
						},
						"description": "The ID of the level"
					}
				],
				"responses": {
					"200": {
						"description": "Level details",
						"content": {
							"application/json": {
								"schema": { "$ref": "#/components/schemas/Level" }
							}
						}
					}
				}
			}
		}
	}
}
