{
  "openapi": "3.1.1",
  "info": {
    "title": "KnowLupus API",
    "version": "1.0.0",
    "description": "API for KnowLupus quiz application"
  },
  "paths": {
    "/api/quizzes": {
      "get": {
        "summary": "Get all quizzes",
        "description": "Retrieve a list of all available quizzes",
        "responses": {
          "200": {
            "description": "List of quizzes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "title": { "type": "string" },
                      "levels": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "id": { "type": "string" },
                            "title": { "type": "string" }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes/{quizId}": {
      "get": {
        "summary": "Get a specific quiz",
        "description": "Retrieve details of a specific quiz by ID",
        "parameters": [
          {
            "name": "quizId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the quiz"
          }
        ],
        "responses": {
          "200": {
            "description": "Quiz details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" },
                    "levels": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "id": { "type": "string" },
                          "title": { "type": "string" }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes/{quizId}/levels": {
      "get": {
        "summary": "Get levels for a quiz",
        "description": "Retrieve all levels for a specific quiz",
        "parameters": [
          {
            "name": "quizId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the quiz"
          }
        ],
        "responses": {
          "200": {
            "description": "List of levels",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "string" },
                      "title": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/quizzes/{quizId}/levels/{levelId}": {
      "get": {
        "summary": "Get a specific level",
        "description": "Retrieve details of a specific level within a quiz",
        "parameters": [
          {
            "name": "quizId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the quiz"
          },
          {
            "name": "levelId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The ID of the level"
          }
        ],
        "responses": {
          "200": {
            "description": "Level details",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "title": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
